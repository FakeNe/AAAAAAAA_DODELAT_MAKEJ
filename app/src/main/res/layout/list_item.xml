<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/group_list_bg_absent"
    android:layout_margin="50dp">

    <TextView
        android:id="@+id/type"
        android:text="Type"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/date"
        android:text="DATE"
        android:layout_below="@id/type"
        android:textStyle="italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/team1_names"
        android:layout_below="@id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/purple_200"
        android:orientation="vertical" />

    <LinearLayout
        android:id="@+id/team2_names"
        android:layout_below="@id/date"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <TextView
        android:id="@+id/team1_data"
        android:textSize="18sp"
        android:text="1"
        android:layout_below="@id/date"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/team1_names"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/team2_data"
        android:text="2"
        android:textSize="18sp"
        android:layout_below="@id/date"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@id/team2_names"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"/>


</RelativeLayout>